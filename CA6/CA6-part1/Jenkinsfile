pipeline {

    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Assemble') {
            steps {
                dir('spring-example') {
                    sh './gradlew clean build -x test'
                }
            }
        }

        stage('Test') {
            steps {
                dir('spring-example') {
                    sh './gradlew test'
                    junit 'build/test-results/test/*.xml'
                }
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'spring-example/build/libs/*.jar', fingerprint: true
            }
        }

        stage('Deploy to Production?') {
            steps {
                script {
                    def approval = input(
                        message: "Deploy to GREEN VM?",
                        parameters: [choice(name: 'confirm', choices: "no\nyes", description: 'Approve deployment?')]
                    )
                    if (approval == "no") {
                        error "Deployment aborted by user"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    def artifact = sh(
                        script: "ls spring-example/build/libs/*.jar",
                        returnStdout: true
                    ).trim()

                    echo "Artifact encontrado: ${artifact}"

                    def artifact_url = "${env.BUILD_URL}artifact/" + artifact.replaceFirst('spring-example/', '')

                    sh """
                    wsl ansible-playbook ansible/deploy-green.yml \
                    -i inventory.ini \
                    --extra-vars "artifact_url=${artifact_url}"
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                sh "wsl ./scripts/healthcheck.sh"
            }
        }

    }

    post {
        success {
            sh """
            git tag -a stable-v${env.BUILD_NUMBER} -m 'Stable build'
            git push origin stable-v${env.BUILD_NUMBER}
            """
            echo "Pipeline finished successfully"
        }
        failure {
            echo "Pipeline failed"
        }
    }
}

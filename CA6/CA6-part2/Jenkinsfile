pipeline {

    agent any

    environment {
        DOCKER_USER = credentials('dockerhub-username')
        DOCKER_PASS = credentials('dockerhub-password')
        IMAGE_TAG = ""
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Branch detectada: ${env.GIT_BRANCH}"
                checkout scm
            }
        }

        stage('Assemble') {
            steps {
                dir('CA6/CA6-part2/spring-example') {
                    sh 'chmod +x gradlew || true'
                    sh './gradlew clean build'
                }
            }
        }

        stage('Parallel Tests') {
            parallel {

                stage('Unit Tests') {
                    steps {
                        dir('CA6/CA6-part2/spring-example') {
                            sh './gradlew test'
                            junit 'build/test-results/test/**/*.xml'
                        }
                    }
                }

                stage('Integration Tests') {
                    steps {
                        dir('CA6/CA6-part2/spring-example') {
                            sh './gradlew integrationTest'
                            junit 'build/test-results/integrationTest/**/*.xml'
                        }
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    env.IMAGE_TAG = "build-${env.BUILD_NUMBER}"

                    sh """
                        cd CA6/CA6-part2
                        docker build -t ${env.DOCKER_USER_USR}/spring-rest-app:${env.IMAGE_TAG} .
                        docker tag ${env.DOCKER_USER_USR}/spring-rest-app:${env.IMAGE_TAG} ${env.DOCKER_USER_USR}/spring-rest-app:latest
                    """
                }
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'CA6/CA6-part2/Dockerfile', fingerprint: true
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh """
                        echo "${env.DOCKER_USER_PSW}" | docker login -u "${env.DOCKER_USER_USR}" --password-stdin
                        docker push ${env.DOCKER_USER_USR}/spring-rest-app:${env.IMAGE_TAG}
                        docker push ${env.DOCKER_USER_USR}/spring-rest-app:latest
                    """
                }
            }
        }

        stage('Deploy to Production') {
            when {
                branch pattern: ".*CA6-part2", comparator: "REGEXP"
            }
            steps {
                script {
                    sh """
                        ansible-playbook -i CA6/CA6-part2/ansible/inventory.ini \
                        CA6/CA6-part2/ansible/deploy-production.yml \
                        --extra-vars "docker_user=${env.DOCKER_USER_USR} docker_pass=${env.DOCKER_USER_PSW}"
                    """
                }
            }
        }

        stage('Health Check') {
            when {
                branch pattern: ".*CA6-part2", comparator: "REGEXP"
            }
            steps {
                script {
                    sh """
                        ansible-playbook -i CA6/CA6-part2/ansible/inventory.ini \
                        CA6/CA6-part2/ansible/healthcheck.yml
                    """
                }
            }
        }
    }

    post {

        success {
            echo "Pipeline concluída com sucesso!"
            emailext subject: "Jenkins - Build SUCESSO (#${env.BUILD_NUMBER})",
                     body: "A pipeline da CA6-Part2 concluiu com sucesso.",
                     to: "1250559@isep.ipp.pt"
        }

        failure {
            echo "Pipeline falhou!"
            emailext subject: "Jenkins - Build FALHOU (#${env.BUILD_NUMBER})",
                     body: "Ocorreu um erro durante a execução da pipeline.",
                     to: "1250559@isep.ipp.pt"
        }
    }
}
